@model TodoCreateEditViewModel
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="TodoItem.Title"></label>
                <input type="text" class="form-control" asp-for="TodoItem.Title" />
                <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="sandbox-container">Pick a date</label>
                <div id="datePicker"></div>
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.Date"></label>
                <input type="text" class="form-control" asp-for="TodoItem.Date" />
                <span asp-validation-for="TodoItem.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.Category"></label>
                <select asp-for="TodoItem.CategoryId" class="form-control" asp-items="Model.CategorySelectList"></select>
            </div>
            <button type="submit" class="btn">Save</button>
            <a asp-action="List" class="btn">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                Back
            </a>
        </form>
    </div>
</div>

<script>
    $('#datePicker').datepicker({
        todayBtn: "linked",
        clearBtn: true,
        autoclose: true,
        todayHighlight: true,
        startDate: new Date(),
        datesDisabled: []
    }).on('changeDate', showDate);

    function showDate() {
        var value = $('#datePicker').datepicker('getFormattedDate');
        $('#TodoItem_Date').val(value);
    }
</script>