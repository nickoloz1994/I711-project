@model TodoCreateEditViewModel

<div class="form-group">
    <label asp-for="TodoItem.Title"></label>
    <input type="text" class="form-control"
           asp-for="TodoItem.Title"
           value="@(Model.TodoItem != null ? Model.TodoItem.Title : "")" />
    <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="datepicker">Pick a date</label>
    <div id="datePicker"></div>
</div>
<div class="form-group">
    <label asp-for="TodoItem.Date"></label>
    <input type="text" class="form-control"
           asp-for="TodoItem.Date"
           value="@(Model.TodoItem != null ? Model.TodoItem.Date.Date.ToString("d") : "")" />
    <span asp-validation-for="TodoItem.Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TodoItem.Category"></label>
    <select class="form-control"
            asp-for="TodoItem.CategoryId"
            asp-items="Model.CategorySelectList"></select>
</div>
<button type="submit" class="btn btn-success">Save</button>
<a asp-action="List" class="btn btn-simple btn-info">
    <i class="fa fa-chevron-left" aria-hidden="true"></i>
    Back
</a>

<script>
    $('#datePicker').datepicker({
        todayBtn: "linked",
        clearBtn: true,
        autoclose: true,
        todayHighlight: true,
        startDate: new Date(),
        datesDisabled: []
    }).on('changeDate', showDate);

    function showDate() {
        var value = $('#datePicker').datepicker('getFormattedDate');
        $('#TodoItem_Date').val(value);
    }
</script>